  0 PUSHINT
  65 PUSHINT
  // ns 0 | 0 ns 0 | 0 ns 1 | 0 1 ns 1 | 0 1 ns 2
  REPEAT:<{ TUCK INC }>
  // 0 1 2 3 ... 64 NS 65
  // capital letters
  // 0 1 2 ... 63 64 . NS 65
  26 PUSHINT 
  s2 PUSH
  SUB
  // 0 1 2 ... 63 64 . NS 65 (NS+65)
  REPEAT:<{ DUP2 ADD -ROT INC }>
  // 0 1 2 ... 63 64 . (65+NS) (66+NS) ... NS C
  OVER
  REPEAT:<{ DUP2 ADD -26 ADDCONST -ROT INC }>
  // [ \ ] ^ _ ` C
  TUCK INC TUCK INC TUCK INC TUCK INC TUCK INC TUCK INC
  // small letters
